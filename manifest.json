{
  "name": "NextWork Extension",
  "description": "Logs server-side HTTP requests in Next.js ok",
  "manifest_version": 3,
  "version": "1.0",
  "devtools_page": "src/devtools.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_idle",
      "css": ["./styles.css"],
      "js": ["src/content-script.js"]
    }
  ],
  "background": {
    "service_worker": "src/service-worker.js"
  }
}

{
  "name": "NextWork Extension",
  "description": "Logs server-side HTTP requests in Next.js",
  "manifest_version": 3,
  "version": "1.0",
  "devtools_page": "devtools.html",
  "content_scripts": [{
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle",
      "js": [
        "content_script.js"
      ]
  }],
  "background": {
      "service_worker": "service-worker.js"
  },
  "runtimeArgs": ["--load-extension=${workspaceFolder}"]
}

{
  "manifest_version": 3,
  "name": "Nextwork",
  "description": "this is the version on os-labs",
  "version": "1.0.0",
  "minimum_chrome_version": "10.0",
  "devtools_page": "src/nextwork-tab.html",
  "action": {
    "default_icon": {
      "16": "public/logo.jpeg"
    },
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "src/nextwork-tab.html",
        "src/popup.html",
        "src/panel.html"
      ],
      "matches": ["<all_urls>"],
      "extension_ids": []
    }
  ]
}
